<html>

<head>
    <script src="http://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.js"></script>
    <link rel="stylesheet" type="text/css" href="resources/tofu.css">
    <script type="text/javascript">
        const RADIUS = 100;
        const RAW_NUM = 15;
        const COL_NUM = 24;
        const BTN_SIZE = 48 / 0.6;
        const SPACING = 1;
        const DISTRACT = 300;
    </script>
</head>

<body>

    <% for(var i=0; i<15; i++) { %>
        <% for(var j=0; j<24; j++) { %>

            <div class="block" id="blk_<%=i%>_<%=j%>">
                <button value="">
                    <% var op = 2 * ( i % 2 ) + ( j % 2 ); %>
                    <img src="../resources/arrow_<%=op%>.png">
                </button>
            </div>

        <% } %>
    <% } %>

    <% if(process.argv[4] === 'mobile'){ %>
        <div id="MobileContainer"></div>
    <% } %>

    <div id="canvas_container">
        <canvas id="canvas" width="1400" height="1000"></canvas>
    </div>

    <div id="eye_tracker" class="<%=EYETRACKER%>"></div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="resources/tofu.js"></script>

</body>

</html>